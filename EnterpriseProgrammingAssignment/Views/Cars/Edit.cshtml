@model EnterpriseProgrammingAssignment.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()">
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <ul>
                        <li>Category M: light-duty vehicles carrying passengers (small cars)</li>
                        <li>Category N: light-duty vehicles carrying goods (pickup vans)</li>
                        <li>Category L: multi passenger carrying van (minibuses)</li>
                    </ul>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input asp-for="PurchaseDate" class="form-control">

                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MOTExpDate" class="control-label"></label>
                <input asp-for="MOTExpDate" class="form-control" />
                <span asp-validation-for="MOTExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxExpDate" class="control-label"></label>
                <input asp-for="TaxExpDate" class="form-control" />
                <span asp-validation-for="TaxExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceExpDate" class="control-label"></label>
                <input asp-for="InsuranceExpDate" class="form-control" />
                <span asp-validation-for="InsuranceExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteID" class="control-label"></label>
                <select asp-for="SiteID" class="form-control" asp-items="ViewBag.SiteID"></select>
                <span asp-validation-for="SiteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
